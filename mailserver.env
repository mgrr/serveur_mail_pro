# Security features
ENABLE_SPAMASSASSIN=1
ENABLE_CLAMAV=1
ENABLE_FAIL2BAN=1
FAIL2BAN_MAXRETRY=5
FAIL2BAN_BANTIME=1h
FAIL2BAN_FINDTIME=10m
ENABLE_POSTGREY=1

# SSL configuration (certificates from Caddy/Let's Encrypt)
SSL_TYPE=manual
TLS_LEVEL=modern
POSTFIX_MESSAGE_RATE_LIMIT=50
POSTFIX_CLIENT_MESSAGE_RATE_LIMIT=20

# Protocols
ONE_DIR=1
ENABLE_POP3=0
ENABLE_IMAP=1

# Docker network permissions
PERMIT_DOCKER=connected-networks
